<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_offline_calculator"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="calculator.webview.tanvir.com.webviewcalculator.OfflineCalculator">

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="bottom|right"
        android:text="0"
        android:textSize="30dp"/>


    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="5">

                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/one"
                        android:layout_weight="1"
                        android:onClick="onClickNumber" />

                    <Button
                        android:id="@+id/btn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/two"
                        android:layout_weight="1"
                        android:onClick="onClickNumber" />

                    <Button
                        android:id="@+id/btn3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/three"
                        android:layout_weight="1"
                        android:onClick="onClickNumber" />


                    <Button
                        android:id="@+id/btnPlus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/plus"
                        android:onClick="onClickOperator" />
                    <Button
                        android:id="@+id/btnmp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mp"
                        android:layout_weight="1"
                        android:onClick="onClickMemoryPlusButton" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="5">


                    <Button
                        android:id="@+id/btn4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/four"
                        android:onClick="onClickNumber" />


                    <Button
                        android:id="@+id/btn5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/five"
                        android:onClick="onClickNumber" />


                    <Button
                        android:id="@+id/btn6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/six"
                        android:onClick="onClickNumber" />


                    <Button
                        android:id="@+id/btnMinus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/minus"
                        android:onClick="onClickOperator" />
                    <Button
                        android:id="@+id/btnmm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mm"
                        android:layout_weight="1"
                        android:onClick="onClickMemoryMinusButton" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="5">

                    <Button
                        android:id="@+id/btn7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/seven"
                        android:layout_weight="1"
                        android:onClick="onClickNumber" />

                    <Button
                        android:id="@+id/btn8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/eight"
                        android:layout_weight="1"
                        android:onClick="onClickNumber" />

                    <Button
                        android:id="@+id/btn9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nine"
                        android:layout_weight="1."
                        android:onClick="onClickNumber" />

                    <Button
                        android:id="@+id/btnMult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mult"
                        android:layout_weight="1."
                        android:onClick="onClickOperator" />
                    <Button
                        android:id="@+id/btnmc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mc"
                        android:layout_weight="1"
                        android:onClick="onClickMemoryClean" />

                </TableRow>


                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:weightSum="5" >

                    <Button
                        android:id="@+id/btn0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/zero"
                        android:layout_weight="1"
                        android:onClick="onClickNumber" />

                    <Button
                        android:id="@+id/buttondot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dot"
                        android:layout_weight="1"
                        android:onClick="onClickNumber" />

                    <Button
                        android:id="@+id/btnEqual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/equal"
                        android:layout_weight="1"
                        android:onClick="onClickEqual" />


                    <Button
                        android:id="@+id/btnDiv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/div"
                        android:layout_weight="1"
                        android:onClick="onClickOperator" />

                    <Button
                        android:id="@+id/btnmr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mr"
                        android:layout_weight="1"
                        android:onClick="onClickMemoryRecall" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:weightSum="2" >

                    <Button
                        android:id="@+id/btnHistory"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="@string/history"
                        android:onClick="onClickHistory"
                        android:layout_weight="1"/>
                    <Button
                        android:id="@+id/btnClear"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="@string/clear"
                        android:onClick="onClickClear"
                        android:layout_weight="1"/>



                </TableRow>


            </TableLayout>

        </LinearLayout>

    </LinearLayout>

